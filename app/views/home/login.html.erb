<!doctype html>
<html>
<head>
	<title>FinanceControl</title>
	<%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
	<%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
	<%= csrf_meta_tags %>
	<%= render "import_head" %>
</head>
<body>
	<div class="container">
        <div class="row">
            <div class="col-md-4 col-md-offset-4">
                <div class="login-panel panel panel-default">
                    <div class="panel-heading">
                        <h3 class="panel-title">Acesso ao Finance Control</h3>
                    </div>
                    <div class="panel-body">
                        
                        <%= form_for(:user, :url => {:controller => 'home', :action => 'sign_in'}) do |f| %>
							<div class="form-group">
								<%= f.text_field :email, :class => "form-control", :placeholder => "E-mail"  %>
							</div>
							<div class="form-group">
								<%= f.password_field :password, :class => "form-control", :placeholder => "Senha" %>
							</div>
							<% if flash[:notice] %>
								<div style="color: #a94442;text-align: center; margin-bottom: 15px;">
									<span><%= notice %></span>
								</div>
							<% end %>
							<div class="submit">
								<input type="submit" value="Entrar" class='btn btn-lg btn-success btn-block'>
							</div>
						<% end %>
                    </div>
                </div>
            </div>
        </div>
    </div>
	
</body>
</html>